{
  "name": "ansible",
  "image": "python:3.14",
  "workspaceFolder": "/app",

  "mounts": [
    "source=${localWorkspaceFolder}/.git,target=${containerWorkspaceFolder}/.git,type=bind",
    "source=${localWorkspaceFolder}/.vscode,target=${containerWorkspaceFolder}/.vscode,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer,target=${containerWorkspaceFolder}/.devcontainer,type=bind",
    "source=${localWorkspaceFolder}/ansible,target=${containerWorkspaceFolder}/ansible,type=bind",
    "source=${localWorkspaceFolder}/README.md,target=${containerWorkspaceFolder}/README.md,type=bind",
    "source=${localEnv:HOME}/.claude,target=/root/.claude,type=bind"
  ],
  "postCreateCommand": "export DEBIAN_FRONTEND=noninteractive && apt update && apt -y install net-tools dnsutils telnet lsof make buildah && mkdir -p /etc/containers && echo '{\"default\":[{\"type\":\"insecureAcceptAnything\"}]}' > /etc/containers/policy.json && printf '[storage]\ndriver = \"vfs\"\n' > /etc/containers/storage.conf && python3 -m venv ${containerWorkspaceFolder}/.venv && /bin/bash -c 'source ${containerWorkspaceFolder}/.venv/bin/activate && pip3 install ansible'",
  "waitFor": "postCreateCommand",
  "shutdownAction": "stopContainer",
  "containerEnv": {
    "LC_ALL": "C.UTF-8"
  },

  "runArgs": [
    "--name", "ansible"
  ],
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": { "label": "ansible", "onAutoForward": "openBrowser" }
  },

  "hostRequirements": {
    "cpus": 1,
    "memory": "2gb",
    "storage": "2gb"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "dracula-theme.theme-dracula",
        "formulahendry.auto-rename-tag",
        "naumovs.color-highlight",
        "intellsmi.comment-translate",
        "Continue.continue",
        "ms-python.python",
        "ms-python.debugpy",
        "ms-python.vscode-pylance",
        "ms-python.vscode-python-envs",
        "ms-vscode.extension-test-runner",
        "ms-playwright.playwright",
        "charliermarsh.ruff",
        "Anthropic.claude-code"
      ]
    }
  }
}
